@{
	ViewBag.Title = "Add";
}

<h2>Add</h2>
<div class="clearfix">
    <div style="float:left;width:400px;">
        @Html.Partial("RxForm")
        <div id="addErr" class="hidden"></div>
    </div>
    <div>
        <h3>Glasses in<br />current batch: <span id="glassesBatchCount">0</span></h3>
    </div>
</div>
<div id="batchDoneMsg" class="hidden" style="background-color:#eee">
    <h3>This batch is done. Please send batch to printing.</h3>
    <p>Hand off 40 pairs of glasses in a batch so that labels can be printed for it. Please keep these 40 together.</p>
</div>

<div class="centered">
	<a href="#" id="add" class="button big">Add to Inventory</a>
    <a href="#" id="sendBatch" class="button big">Send Batch for printing</a>
	<a href="#" id="clear" class="button big">Clear Form</a>
</div>


<div id="addMsg"></div>

<script src="/js/add.js" type="text/javascript"></script>
<script id="addMsgTmpl" type="text/x-jquery-tmpl">
<p>Added with call number ${Group} / ${Number}<br />
	<table style="width:200px">
        <tr><td></td><td>Sph</td><td>Cyl</td><td>Axis</td><td>Add</td></tr>
		<tr><td><b>OD</b></td><td>${Glasses.OD_Spherical}</td><td>${Glasses.OD_Cylindrical}</td><td>${Glasses.OD_Axis}</td><td>${Glasses.OD_Add}</td></tr>
        <tr><td><b>OS</b></td><td>${Glasses.OS_Spherical}</td><td>${Glasses.OS_Cylindrical}</td><td>${Glasses.OS_Axis}</td><td>${Glasses.OS_Add}</td></tr>
	</table>
</p>
</script>