<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/serverIpAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/startStopServerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startStopServerButtonClick"
            android:text="@string/startServer" />
        <Button
            android:id="@+id/webviewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="webviewButtonClick"
            android:text="@string/webclient"
            android:enabled="false"/>
    </LinearLayout>

</RelativeLayout>